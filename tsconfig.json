{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}
